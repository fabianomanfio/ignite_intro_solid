                    "name": "Joaozinho Real da Silva",
                    "email": "joaozinho.real@gmail.com.br",
                    "created_at": "2022-05-24T22:30:10.992Z",
                    "updated_at": "2022-05-24T22:30:10.992Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User does not exist!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User does not exist!"
                  }
                }
              }
